@model Piranha.Manager.TestPage.HeaderRegion

<div class="card header-region" style="@(Model.Background.HasValue ? $"background-image:url('{Url.Content(Model.Background.Media.PublicUrl)}')" : "")">
    <div class="card-body text-center">
        @if (!string.IsNullOrEmpty(Model.SubTitle))
        {
            <small>@Model.SubTitle</small>
        }
        @if (!string.IsNullOrEmpty(Model.Title))
        {
            <h2>@Model.Title</h2>
        }
        @if (!string.IsNullOrEmpty(Model.Body))
        {
            @Html.Raw(Model.Body)
        }
    </div>
</div>
<style>
    .header-region {
        background-size: cover;
        color: #fff;
        padding: 2rem 1.25rem;
        text-shadow: 0 0 2px rgba(0,0,0.5);
        border-radius: 0;
    }
    .header-region small {
        text-transform: uppercase;
        font-weight: bold;
        opacity: .8;
    }
    .header-region h2 {
        font-family: "Open Sans";
        font-weight: 300;
    }
    .header-region p {
        padding: 2rem 4rem 0rem;
        font-size: 1.2rem;
        margin-bottom: 0;
    }
</style>